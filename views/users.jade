extends layout

block content
    div.navbar.navbar-fixed-top
        div.container-fluid
            // Wrapper
            #wrapper.row
                div.col-sm-3.col-md-2.sidebar
                    h1= "Menu"
                    ul.nav
                        li
                            a(href="/account/getTestlist")#getTests="Tests"
                        li
                            a(href="/users")#getUsers= "Users"
                        li
                            a= "Results"
                        li
                            a= "Pictures"
                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                    // USER LIST
                    h1.page-header= "Users List"
                    form.navbar-form.navbar-right
                        input(type="text", placeholder="Username").form-control
                        input(type="email", placeholder="Email").form-control
                        input(type="password", placeholder="password").form-control
                        input(type="button", value="Add User").form-control.btn-primary
                    h2 Users List
                    #userList.table-responsive
                        table.table.table-striped
                            thead
                                th User Name
                                th Email
                                th Password
                                th Token
                            tbody
                                -var index = 0
                                each result, key in docs
                                    tr(id=index++)
                                        each value, key in result
                                            th(id="#{key}-#{index}") #{value}
                                        th
                                            button(id="delete #{index}").btn.btn-primary= "Delete"
                                        th
                                            button(id="edit #{index}").btn.btn-primary= "Edit"
        // /USER LIST

    // /WRAPPER
